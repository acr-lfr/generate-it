{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@constants": [
        "src/constants"
      ],
      "@database": [
        "src/database"
      ],
      "@domains": [
        "src/domains"
      ],
      "@http": [
        "src/http"
      ],
      "@services": [
        "src/services"
      ],
      "@utils": [
        "src/utils"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "exclude": [
    "package.json"
  ]
}
